---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pro Activation Complete">
  <main style="text-align: center; padding: 40px 20px;">
    <h1>✅ Payment Successful!</h1>
    <p style="font-size: 18px; color: #666; margin: 20px 0;">
      Your Pro subscription is now active.
    </p>
    
    <div style="background: #f0f9ff; padding: 20px; border-radius: 8px; margin: 20px 0; border-left: 4px solid #667eea;">
      <h2 style="margin: 0 0 10px 0;">Next Steps:</h2>
      <ol style="text-align: left; max-width: 400px; margin: 0 auto;">
        <li>Return to the SkyPost Safari extension</li>
        <li>Click Pro Settings → Activate License</li>
        <li>Enter the email you used for checkout</li>
        <li>Your Pro license will activate automatically</li>
      </ol>
    </div>

    <p style="color: #999; font-size: 14px;">
      Session ID: <code style="background: #f0f0f0; padding: 2px 6px; border-radius: 4px;">{sessionId}</code>
    </p>

    <a href="/" style="display: inline-block; margin-top: 20px; padding: 10px 20px; background: #667eea; color: white; text-decoration: none; border-radius: 6px;">
      Back to Home
    </a>
  </main>
</Layout>

<script>
  // Get session ID from URL
  const params = new URLSearchParams(window.location.search);
  const sessionId = params.get('session_id');
  document.querySelector('code').textContent = sessionId || 'N/A';
</script>
